<?xml version="1.0" encoding="utf-8"?>
<AnalysisInput xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Settings>
    <Setting>
      <Key>sonar.cs.analyzeGeneratedCode</Key>
      <Value>false</Value>
    </Setting>
    <Setting>
      <Key>sonar.cs.file.suffixes</Key>
      <Value>.cs</Value>
    </Setting>
    <Setting>
      <Key>sonar.cs.ignoreHeaderComments</Key>
      <Value>true</Value>
    </Setting>
    <Setting>
      <Key>sonar.cs.roslyn.ignoreIssues</Key>
      <Value>false</Value>
    </Setting>
  </Settings>
  <Rules>
    <Rule>
      <!--Lines should not be too long-->
      <Key>S103</Key>
      <Parameters>
        <Parameter>
          <Key>maximumLineLength</Key>
          <Value>180</Value>
        </Parameter>
      </Parameters>
    </Rule>
    <Rule>
      <!--Methods should not have too many parameters-->
      <Key>S107</Key>
      <Parameters>
        <Parameter>
          <Key>max</Key>
          <Value>4</Value>
        </Parameter>
        <Parameter>
          <Key>constructorMax</Key>
          <Value>5</Value>
        </Parameter>
      </Parameters>
    </Rule>
    <Rule>
      <!--Functions should not have too many lines of code-->
      <Key>S138</Key>
      <Parameters>
        <Parameter>
          <Key>max</Key>
          <Value>25</Value>
        </Parameter>
      </Parameters>
    </Rule>
    <Rule>
      <!--String literals should not be duplicated-->
      <Key>S1192</Key>
      <Parameters>
        <Parameter>
          <Key>threshold</Key>
          <Value>2</Value>
        </Parameter>
      </Parameters>
    </Rule>
  </Rules>
</AnalysisInput>
